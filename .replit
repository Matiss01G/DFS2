
modules = ["cpp"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Build and Test"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Build Only"

[[workflows.workflow]]
name = "Build and Test"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd /home/runner/workspace && mkdir -p build && cd build && cmake -DCMAKE_BUILD_TYPE=Debug .. && make && ./network_tests"

[[workflows.workflow]]
name = "Build Only"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd /home/runner/workspace && mkdir -p build && cd build && cmake -DCMAKE_BUILD_TYPE=Debug .. && make"

[[ports]]
localPort = 12345
externalPort = 80
exposeLocalhost = true

[deployment]
run = ["sh", "-c", "cd /home/runner/workspace && mkdir -p build && cd build && cmake -DCMAKE_BUILD_TYPE=Debug .. && make && ./network_tests"]
